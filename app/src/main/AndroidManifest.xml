<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amov.lidia.andre.androidchess">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.screen.portrait" /> <!-- A aplicação só usa a orientação portrait -->

    <application
        android:name=".Chess"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CustomActivities.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CustomActivities.GameActivity" android:screenOrientation="portrait" />
        <activity android:name=".CustomActivities.LoadActivity" android:screenOrientation="portrait"/>
        <activity android:name=".CustomActivities.HistoricoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".CustomActivities.VerHistoricoJogoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".CustomActivities.RegisterPlayer" android:screenOrientation="portrait"/>
    </application>

</manifest>